
<div id="header-wrapper">
		<div id="header">
				<div id="menu1">
						<ul>
								<% if current_user %>
										<li class="<%= ((params[:controller] == 'users') && (%w(show update edit).include?(params[:action]))) ? 'current_page_item' : '' %>"><%= link_to "My Account", account_path %></li>
										<li><%= link_to "Events", "#" %></li>
								<% end %>
						</ul>
				</div>
				<div id="logo">
						<h1><%= link_to "iReminder", root_path %></h1>
						<p>An Intelligent Reminder System</p>
				</div>
				<div id="menu2">
						<ul>
								<% if current_user %>
										<li style="margin-top: 13px; width: 200px;"><span id="displayUserName">Welcome <%= current_user.login %> | <%= current_user.role.titleize %></span></li>
										<li><%= link_to "Logout", logout_path, :method => :delete %></li>
								<% end %>
						</ul>
				</div>
		</div>
</div>
	